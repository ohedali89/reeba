.loyalty-banner-container {
	background-image: url({{'reward-banner-F22.png'}});
    background-repeat: no-repeat;
    background-size: contain;
    min-height: 450px;
    width: 100%;
    font-family: Queulat;
    font-size: 16px;
    text-align: center;
    color: #5d5d5d;
    padding-top: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.loyalty-banner-container p {
  width:40%;
  margin: 20px auto 0px;
}



@font-face {
  font-family: "RobotoSlab";
  src: url("https://yotpo-stool.s3.amazonaws.com/images/fonts/RobotoSlab-VariableFont_wght.ttf") 
}


.loyalty-banner-container .loyalty-button {
    margin: 20px auto;
    display: block;
    width: 100px;
}

.loyalty-sign-in-text a {
	color: #5d5d5d;
	text-decoration: underline;
}

.loyalty-banner-login-container {
    padding-bottom: 0;
}

@media only screen and (max-width: 768px) {
  .loyalty-banner-container img {
    width: 100%;
}


.loyalty-banner-login-container {
    padding-bottom: 20px;
}
  
  .loyalty-banner-container p {
    width: 80%;
    margin: 130px auto 0px;
}
}

@media only screen and (max-width: 480px) {
  
 .loyalty-banner-container p {
    width: 100%;
    margin: 75px auto 0px;
} 
  
  
.loyalty-banner-container {
    min-height: unset;
    padding-top: 7%;
}
}