.loyalty-hiw-container {
    position: relative;
    margin-top:10px;
        margin-bottom: 25px;
}

.loyalty-hiw-step {
    padding: 0 5%;
}

.loyalty-hiw-steps-container {
    display: flex;
    justify-content: space-evenly;
    text-align: center;
    width: 80%;
    margin: 0 auto;
    
}

.loyalty-hiw-step-num {
    border: solid 2px #68c7be;
    color: #68c7be;
    font-size: 36px;
    width: 85px;
    height: 85px;
    border-radius: 50%;
    margin: 0 auto;
    padding: 0;
    line-height: 82px;
    background-color: #ffffff;
}

.loyalty-hiw-step-title {
	color: #68c7be;
	font-size: 24px;
}

.loyalty-hiw-container hr {
    border: none;
    border-bottom: solid 2px #68c7be;
    width: 58%;
    margin: 0 auto;
    position: absolute;
    left: 0;
    right: 0;
    top: 47%;
    z-index: -1;
}

.loyalty-dashboard-btn-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    width: 50%;
    margin: 0 auto;
}

.loyalty-dashboard-btn-container .loyalty-button {
    margin: 15px 0px;
    width: auto;
    margin-right: 0;
    min-width: 170px;
}
@media only screen and (max-width: 768px) {
    .loyalty-hiw-container hr {
        display:none;
    }

    .loyalty-hiw-step-num {
    border: solid 2px #68c7be;
    color: #68c7be;
    font-size: 22px;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    margin: 0 auto;
    padding: 0;
    line-height: 60px;
    background-color: #ffffff;
}

.loyalty-hiw-step-title {
    color: #68c7be;
    font-size: 18px;
}

.loyalty-hiw-step-text {
    font-size: 15px;
}
.loyalty-hiw-steps-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: center;
    width: 50%;
    margin: 0 auto;
}
.loyalty-hiw-step {
    padding: 0 5%;
    margin-bottom: 40px;
}


.loyalty-dashboard-btn-container .loyalty-button {
    margin: unset;
    margin-right: 0;
    margin-bottom: 20px;
}

.loyalty-page-container h1 {
    text-align: center;
    margin-top: 60px;
    line-height: 1.2;
}


.loyalty-page-container h1 {
    text-align: center;
    margin-top: 40px;
    line-height: 1.2;
    padding-bottom: 20px;
}
  
  
  .loyalty-dashboard-btn-container {
    width: 65%;
}
