.loyalty-hide-modal {
	display: none;
}

.loyalty-referral-modal-overlay {
    position: fixed;
    z-index: 100;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0);
    background-color: rgba(0, 0, 0, 0.80);
    padding-top: 2%;
}

.loyalty-referral-modal-thanks {
	  font-family: "Serendipity";
	  font-size: 50.5px;
	  font-weight: normal;
	  letter-spacing: normal;
	  text-align: center;
	  color: #ffffff;
	  line-height: 1.5
}

.loyalty-referral-modal-widget-container {
    width: 90%;
    margin: 0 auto;
    max-width: 1220px;
}

.loyalty-referral-modal-content-container .loyalty-referral-widget-container {
    margin-top:0;
