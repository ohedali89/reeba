<section class="section">
  <div class="container">
    <div class="one-whole column collection_nav">
      <h1 class="collection_title">
        {{ 'general.404.title' | t }}
      </h1>
    </div>

    <div class="one-whole column">
      <p class="quote">
        {{ 'general.404.subtext' | t }}
      </p>

      <p class="extra_padding center">
        {{ 'general.404.continue_shopping_html' | t: continue_link: routes.all_products_collection_url }}
      </p>
    </div>

    <div class="one-half column medium-down--one-whole offset-by-four is-hidden-offset-mobile-only search__form" data-autocomplete-{{ settings.enable_autocomplete }}>
      <form class="search" action="{{ routes.search_url }}">
        <input type="hidden" name="type" value="{{ settings.search_option }}" />
        <input type="text" name="q" class="search_box" placeholder="{{ 'general.search.placeholder' | t }}" value="{{ search.terms }}" style="width: 100%" />
      </form>
    </div>
  </div>
</section>
