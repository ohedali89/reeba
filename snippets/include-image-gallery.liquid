<section class="section">
  <div class="container">
     <div class="one-third column medium-down--one-whole thumbnail">
        {% if block.settings.page_detail_image_1 %}
          <a href="javascript:;" data-fancybox="{{ block.id }}" data-src="{{ block.settings.page_detail_image_1 | img_url: '1520x' }}" rel="gallery">
            {% render 'image-element',
                    image: block.settings.page_detail_image_1,
                    alt: block.settings.page_detail_image_1.alt
            %}
          </a>
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="one-third column medium-down--one-whole thumbnail">
